.jumbotron{style: "text-align:center;"}
	%h1.text-info#responsive_code
		%span.label.label-success
			= @order.token
	%br
	%p{style: "font-weight: 400;"}  
		=t(:code_explanation)
	%p
		%strong=t(:enjoy_it)

	.panel.panel-info
		.panel-heading 
			%h3.panel-title= t(:order_summary) 
		.panel-body 
			.badge.badge-info #{@order.quantity} 
			#{@order.product.name} - $#{@order.product.price}
		.panel-footer
			%h3
				Total: 
				$#{@order.product.price*@order.quantity}
		
	%a.btn.btn-block.btn-info.btn-lg.fancy-button{ href: "/orders/new/#{Table.find(@order.table_id).uid}" }
		= icon('plus') 
		= t(:order_something_more)
	%a.btn.btn-block.btn-primary.btn-lg.fancy-button{ href: "/code/#{Table.find(@order.table_id).uid}" }
		= icon('home') 
		= t(:back_to_the_home_menu)