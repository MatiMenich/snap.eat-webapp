<div class="container">    
  <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">                    
    <div class="panel panel-info" >
      <div class="panel-heading">
        <div class="panel-title">Change your password</div>
      </div>     

      <div style="padding-top:30px" class="panel-body" >
        
        <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>

          <%= devise_error_messages! %>
          <%= f.hidden_field :reset_password_token %>
          <div style="margin-bottom: 25px" class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
            <%= f.password_field :password, autofocus: true, autocomplete: 'off', class: 'form-control', placeholder: 'Enter the new password' %>                                     
          </div>

          <div style="margin-bottom: 25px" class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
            
            <%= f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control', placeholder: 'Confirm the new password'%>
          </div>


          <% if devise_mapping.rememberable? -%>
          <div class="input-group">
            <div class="checkbox">
              <label>
                <%= f.check_box :remember_me %> <%= f.label :remember_me %>
              </label>
            </div>
          </div>
          <% end -%>

          <div class="form-group">
              <%= f.submit 'Change my Password', :class => 'btn btn-success btn-block' %>
          </div>  
        <% end %>   



      </div>                     
    </div>  
  </div>
</div>