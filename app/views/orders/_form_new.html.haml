= bootstrap_form_for @order do |f|
  - if @order.errors.any?
    #error_explanation
      %h2= "#{pluralize(@order.errors.count, "error")} prohibited this order from being saved:"
      %ul
        - @order.errors.full_messages.each do |msg|
          %li= msg

  = hidden_field_tag 'order[table_id]', @table.id
  .field
    .form-group
      = label_tag 'order[product_id]', t(:product) , class: 'control-label'
      = select_tag 'order[product_id]', options_from_collection_for_select(Product.all, :id, :name), prompt: t(:select_product), class: 'form-control input-lg'
  .field
    = f.number_field :quantity, prepend: "#", required: true, class: "input-lg", label: t(:quantity)
  .form-group
    = f.submit t(:order), class: 'btn btn-success btn-lg btn-block fancy-button'
    %a.btn.btn-danger.btn-block.btn-lg.fancy-button{onclick: "history.back(-1)"}= t(:cancel)
  %br
