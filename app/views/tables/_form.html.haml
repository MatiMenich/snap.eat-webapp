= bootstrap_form_for @table do |f|
  - if @table.errors.any?
    #error_explanation
      %h2= "#{pluralize(@table.errors.count, "error")} prohibited this table from being saved:"
      %ul
        - @table.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.number_field :number
  .field
    = f.text_field :place
  .field
    = f.text_field :uid
  .actions
    = f.submit 'Save'
